@page
@model Retegan_Andra_proiect2.Pages.Cataloage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Catalog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Catalog.ID" />
            <div class="form-group">
                <label asp-for="Catalog.NumeStud" class="control-label"></label>
                <input asp-for="Catalog.NumeStud" class="form-control" />
                <span asp-validation-for="Catalog.NumeStud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalog.PrenumeStud" class="control-label"></label>
                <input asp-for="Catalog.PrenumeStud" class="form-control" />
                <span asp-validation-for="Catalog.PrenumeStud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalog.NotaStud" class="control-label"></label>
                <input asp-for="Catalog.NotaStud" class="form-control" />
                <span asp-validation-for="Catalog.NotaStud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalog.DataExam" class="control-label"></label>
                <input asp-for="Catalog.DataExam" class="form-control" />
                <span asp-validation-for="Catalog.DataExam" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Catalog.ProfesorID" class="control-label">Nume Profesor</label>
                <select asp-for="Catalog.ProfesorID" class="form-control" asp-items="ViewBag.ProfesorID">
                </select>
                <span asp-validation-for="Catalog.ProfesorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategories"
                                               value="@cat.MaterieID"
                                               @(Html.Raw(cat.Asignat ? "checked=\"checked\"" : "")) />
                                        @cat.MaterieID @: @cat.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
